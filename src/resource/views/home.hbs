<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 my-2">
            <div class="card" style="background-color:#eee; border-color:darkblue;">
                <a href="courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="courses/{{this.slug}}">
                        <h4 class="card-title">{{this.name}}</h4>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>